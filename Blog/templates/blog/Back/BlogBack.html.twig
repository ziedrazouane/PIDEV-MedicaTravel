{% extends 'Back.html.twig' %}

{% block title %}Blog{% endblock %}
{% block body %}
    <div class="col-12 ">
        <div class="card">
            <div class="card-header">

            </div>
            <table class="table">
                <thead>
                <tr>
                    <th style="width:40%;">Id</th>

                    <th style="width:25%">Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for cat in categories %}
                    <tr>
                        <td>{{ cat.Id }}</td>
                        <td>{{ cat.Nom }}</td>
                        <td class="table-action">
                           <a href="{{ path('Cat_edit',{'id':cat.Id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 align-middle"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a>
                            <a href="{{ path('SupprimerCat',{'id':cat.Id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash align-middle"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg></a>
                        </td>
                    </tr>
                {% endfor %}



                </tbody>
            </table>
        </div>
    </div>
    </div>
    </div>
    <div class="col-12 ">
        <div class="card">
            <div class="card-header">

            </div>
            <table class="table">
                <thead>
                <tr>
                    <th style="width:40%;">Titre</th>

                    <th style="width:25%">Auteur</th>
                    <th class="d-none d-md-table-cell" style="width:25%">Date de création</th>
                    <th style="width:25%">Catégorie</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                <tr>
                    <td>{{ article.Titre }}</td>
                    <td>{{ article.Auteur }}</td>
                    <td class="d-none d-md-table-cell">{{ article.Date | date('d/m/Y') }}</td>
                    <td>{{ article.Categorie }}</td>
                    <td class="table-action">
                        <a href="{{ path('Blog_edit',{'id':article.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 align-middle"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a>
                        <a href="{{ path('Supprimer',{'id':article.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash align-middle"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg></a>
                    </td>
                </tr>
                {% endfor %}



                </tbody>
            </table>
        </div>
    </div>
        </div>
    </div>

{% endblock %}